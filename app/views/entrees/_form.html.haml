.units-row
  .unit-centered.unit-50
    .forms.text-centered
      %br
      = form_for @entree do |f|
        = f.text_field :title, class: 'width-50 unit-centered', placeholder: "Title"
        %br
        = f.text_area :description, class: 'width-50 unit-centered', placeholder: "Description"
        %br
        = f.label :image
        = f.file_field :image, class: 'width-50 unit-centered'
        %br
        = f.submit "Save", class: 'btn btn-black width-50'