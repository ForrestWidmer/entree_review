.container
  .row
    .col-md-6.text-center
      %br
      = link_to "Edit Entree", edit_entree_path, class: "btn btn-primary"
      = link_to "Add Review", new_entree_review_path(@entree), class: "btn btn-primary"
  .row
    .col-md-6.text-center
      = render 'ratings/rating'
      %h1= @entree.title
      %h3= @entree.restaurant
      %p= @entree.description
      - @reviews.each do |review|
        %p 
          = link_to truncate(review.body, length: 25, separator: ' '), [@entree, review]

    .col-md-6.text-center
      %iframe{id: "iframe", width: "500", height: "350", class: "thumbnail", frameborder: "1", src: "https://www.google.com/maps/embed/v1/search?key=AIzaSyA8AAY4bx91aeNpHe_SKmdIPZTpra-VoNs&zoom=8&q=#{@entree.restaurant},#{@location}" }
  .row
    .col-md-12.text-center
      %button.btn.btn-primary#all-images
        Show/Hide Images
      %button.btn.btn-primary#img-button
        Add an image?
      = render 'images/form'
  #image-group
    = render 'images/images'