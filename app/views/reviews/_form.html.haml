.units-row
  .unit-centered.unit-50
    .forms.text-centered
      %br
      = form_for [@entree, @review] do |f|
        =f.label :stars
        = f.select :stars, (1..5), class: 'width-50 unit-centered'
        %br
        = f.text_area :body, class: 'width-50 unit-centered', placeholder: "Review goes here."
        %br
        = f.submit "Save", class: 'btn btn-black width-50'