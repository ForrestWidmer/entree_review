.row
  .col-md-4.col-centered
    .col-centered.text-centered
      %br
      = form_for [@entree, @review] do |f|
        =f.label :stars
        = f.select :stars, (1..5), class: 'form-control'
        %br
        = f.text_area :body, class: 'form-control', placeholder: "Review goes here."
        %br
        = f.submit "Save", class: 'form-control btn btn-primary'